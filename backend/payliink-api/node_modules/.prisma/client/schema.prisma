model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  ANALYST
}

model Agency {
  id                String       @id @default(uuid())
  name              String       @unique
  status            AgencyStatus
  cnpj              String       @unique
  stateRegistration String       @unique
  founded           DateTime
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  @@map("agencys")
}

enum AgencyStatus {
  APPROVED
  REJECTED
  PENDING

  @@map("status")
}
